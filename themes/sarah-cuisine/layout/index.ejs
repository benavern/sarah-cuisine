<div id="page-home">
  <div class="hero-zone" style="background-image: url(<%= theme.header_bg %>);">
    <div class="container">
      <h2 class="funny-font">Sarah Cuisine</h2>
    </div>
  </div>

  <section class="page-content">
    <div class="container">
      <h3>
        Mes recettes :
      </h3>

      <ul>
        <% page.posts.each(post => { %>
          <li>
            <%- link_to(post.path, post.title) %>
          </li>
        <% }) %>
      </ul>
    </div>
  </section>
</div>
